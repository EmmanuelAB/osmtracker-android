<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/buttons_presets"
    android:paddingTop="4dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DEFAULT LAYOUT"
        android:padding="7dp"
        android:layout_marginLeft="10dp"/>

    <CheckBox
        android:id="@+id/def_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:text="default"
        android:layout_marginLeft="20dp"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/down_sec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DOWNLOADED LAYOUT"
        android:padding="7dp"
        android:layout_marginLeft="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/list_layouts"
        android:layout_marginBottom="25dp">

        <!--This text only appear when the user don't have any files downloaded-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You don't have downloaded layout files"
            android:id="@+id/btnpre_empty"
            android:gravity="center"
            android:padding="7dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/AvailableLayouts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:onClick="availableLayouts"
        android:text="Available Layouts" />

</LinearLayout>