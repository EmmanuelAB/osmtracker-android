<!--Layout example-->

<layouts>
	
	<!--Main layout, first to be displayed-->
	<layout name="root">
		<!--Special action Buttons-->
		<row>
			<button type="picture" icon=""/>
			<button type="textnote" icon=""/>
		</row>
		<!--Standar tag buttons for mapping different kinds of water supplies -->
		<row>
			<button type="tag" label="Unused water supplied" icon="" iconpos=""/>
			<button type="tag" label="Actual used water supplied" icon="" iconpos=""/>
		<!--Link to sub page-->
			<button type="page" label="Contaminated water supply" targetlayout="contaminated" icon="" iconpos=""/>
		</row>
		
	</layout>
	
	 <!-- Contaminated layout, will be displayed when clicking on "Contaminated water supply" previous defined button -->
	<layout name="contaminated">
	
		<row>
			<!--Special action button to take a picture of the area-->
			<button type="picture" icon="logo_camera"/>
			<!--Standar tag buttons-->
			<button type="tag" label="Labeled water supply" icon="" iconpos=""/>
			<button type="tag" label="Unlabeled water supply" icon="" iconpos=""/>
		</row>
		
	</layout>

</layouts>
